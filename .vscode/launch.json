            "type": "node",
            "request": "launch",
            "name": "Lancer le programme",
            "program": "${workspaceFolder}\\dist\\tools\\gw-data.js",
            "outFiles": [
                "${workspaceFolder}/**/*.js"
            ]
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Debug tests",
            "program": "${workspaceRoot}/node_modules/ava/profile.js",
            "args": ["${workspaceRoot}/dist/test/stores/units.spec.js"],
            "outFiles": [
                "${workspaceRoot}/dist/**/*.js"
            ],
            "protocol": "inspector"
        }
    ]
